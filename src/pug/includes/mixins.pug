mixin icon(name,mod)
	- mod = mod || ''
	svg(class="icon icon-" + name + ' ' + mod)
		use(xlink:href="/img/svg/sprite.svg#" + name)

mixin tabItem(tabId)
	.tabcontent__item(id=tabId)
		ul.formloan__list
			li
				.formloan__sub-title Марка автомобиля
				.selectcustom
					select
						option Mersedes
						option Audi
						option Toyota
			li
				.formloan__sub-title Модель автомобиля
				.selectcustom
					select
						option A7
						option A8
			li
				.formloan__sub-title Год выпуска
				.selectcustom
					select
						option 1990 г
						option 2000 г
			li
				.formloan__sub-title Вид неисправности
				.selectcustom
					select
						option Изготовление ключа
						option тест
			li
				button(type="submit").formloan__btn Отправить заявку

mixin teamSliderItem(img, photo, name)
	.swiper-slide
		.team-slider__item
			.team-slider__img
				img(src="img/" + img)

			ul.team-slider__member
				li
					.team-slider__photo
						img(src="img/" + photo)
				li
					.team-slider__name= name

					ul.team-slider__revlist
						li
							.team-slider__star
								img(src="img/star.png" width="20" height="20")
								b 4.8
						li
							.team-slider__rev
								img(src="img/rev-icon.png" width="20" height="20")

			.team-slider__article 
				|Специалисты по ремонту широкого профиля с опытом работы более 10 лет. 
				|Ремонтируем в буквальном смысле всё

			button(type="button").btngreen Бесплатный выезд мастера

